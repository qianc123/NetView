<UserControl x:Class="NetView.View.UC_VarMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetView.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox ItemsSource="{Binding VarCollect, RelativeSource={RelativeSource  Mode=FindAncestor, AncestorType=UserControl}}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Image Name="ImageIOType" Width="20"/>
                        <TextBlock Name="ModuleName" Width="100" Text="{Binding SubModelName}"/>
                        <TextBlock Name="DisplayFormat" Width="100" Text="{Binding DisplayFormat}"/>
                        <TextBlock Name="CurValue" Width="200"/>
                        <TextBlock Name="ModifyValue" Width="200"/>
                        <Image/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
